---
import "../styles/global.css";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Yariv Zur — Advisor & Strategist</title>
    <meta
      name="description"
      content="Yariv Zur — Strategic advisory through Lokahi, personal writing at Bitterness Inc."
    />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  </head>
  <body>
    <!-- Header -->
    <header class="border-b border-border">
      <div class="mx-auto max-w-3xl px-6 py-12 text-center">
        <h1 class="text-4xl font-bold text-foreground sm:text-5xl">
          Yariv Zur
        </h1>
        <p class="mt-3 text-lg text-foreground-muted">Advisor & Strategist</p>
      </div>
    </header>

    <!-- Main — Two Columns -->
    <main class="flex-1">
      <div
        class="mx-auto grid max-w-3xl gap-0 border-b border-border sm:grid-cols-2"
      >
        <!-- Professional -->
        <div class="border-b border-border px-6 py-10 sm:border-b-0 sm:border-r">
          <p
            class="mb-4 text-xs font-semibold uppercase tracking-widest text-foreground-muted"
          >
            Professional
          </p>
          <h2 class="text-2xl font-bold text-foreground">Lokahi</h2>
          <p class="mt-3 text-foreground-muted">
            Strategic advisory helping organizations navigate complex challenges.
          </p>
          <a
            href="https://www.lokahi.me"
            class="mt-6 inline-block text-lg font-medium"
          >
            www.lokahi.me &rarr;
          </a>
          <p class="mt-4 text-sm text-foreground-muted">
            <a href="mailto:yariv@lokahi.me" class="text-foreground-muted hover:text-accent">
              yariv@lokahi.me
            </a>
          </p>
        </div>

        <!-- Personal -->
        <div class="px-6 py-10">
          <p
            class="mb-4 text-xs font-semibold uppercase tracking-widest text-foreground-muted"
          >
            Personal
          </p>
          <h2 class="text-2xl font-bold text-foreground">Bitterness Inc.</h2>
          <p class="mt-3 text-foreground-muted">
            Personal writing, cultural commentary, and unfiltered thinking.
          </p>
          <a
            href="https://blog.pokarov.com"
            class="mt-6 inline-block text-lg font-medium"
          >
            blog.pokarov.com &rarr;
          </a>
          <p class="mt-4 text-sm text-foreground-muted">
            <a href="mailto:yariv.zur@gmail.com" class="text-foreground-muted hover:text-accent">
              yariv.zur@gmail.com
            </a>
          </p>
        </div>
      </div>
    </main>

    <!-- Footer -->
    <footer class="mx-auto w-full max-w-3xl px-6 py-8">
      <div class="flex flex-col items-center gap-3 text-sm text-foreground-muted sm:flex-row sm:justify-center sm:gap-6">
        <a
          href="https://www.linkedin.com/in/yarivzur/"
          target="_blank"
          rel="noopener noreferrer"
          class="text-foreground-muted hover:text-accent"
        >
          LinkedIn
        </a>
        <span class="hidden text-border sm:inline">&middot;</span>
        <a
          href="https://www.linkedin.com/company/lokahiadvisory/"
          target="_blank"
          rel="noopener noreferrer"
          class="text-foreground-muted hover:text-accent"
        >
          Lokahi on LinkedIn
        </a>
      </div>
    </footer>
  </body>
</html>
